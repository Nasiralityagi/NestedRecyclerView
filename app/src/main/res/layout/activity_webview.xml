<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nesstech.metube.webview.WebviewActivity">

    <FrameLayout
        android:id="@+id/customViewContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#000"
        android:clickable="false"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relative_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">


        <android.support.v4.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true">

            <RelativeLayout
                android:id="@+id/appWindow"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme.AppBarOverlay">

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/colorPrimary"
                        android:theme="@style/AppTheme.AppBarOverlay"
                        app:layout_scrollFlags="scroll|enterAlways"
                        app:popupTheme="@style/AppTheme.PopupOverlay">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_card_white"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imDoc"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:paddingBottom="8dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="8dp"
                                android:src="@drawable/ic_doc" />

                            <TextView
                                android:id="@+id/txtTitle"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_weight="1"
                                android:autoLink="web"
                                android:clickable="false"
                                android:ellipsize="end"
                                android:focusable="false"
                                android:gravity="start|center_vertical"
                                android:linksClickable="false"
                                android:maxLines="1"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:textColor="@android:color/black"
                                android:textColorLink="#0099CC"
                                android:textSize="15sp" />

                            <RelativeLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/imClose"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:contentDescription="@string/app_name"
                                    android:paddingBottom="12dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="12dp"
                                    android:src="@drawable/ic_close" />

                                <ImageView
                                    android:id="@+id/imRefresh"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:contentDescription="@string/app_name"
                                    android:paddingBottom="8dp"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingTop="8dp"
                                    android:src="@drawable/ic_refresh_black" />

                            </RelativeLayout>
                        </LinearLayout>
                    </android.support.v7.widget.Toolbar>

                    <ProgressBar
                        android:id="@+id/progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/toolbar"
                        android:layout_marginBottom="-10dp"
                        android:layout_marginTop="-10dp"
                        android:progress="50" />
                </android.support.design.widget.AppBarLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/appbar">

                    <com.nesstech.metube.webview.ObservableWebview
                        android:id="@+id/webView"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_above="@+id/menu_main"
                        android:layout_alignParentTop="true"
                        android:background="@android:color/transparent" />

                    <android.support.v7.widget.ActionMenuView
                        android:id="@+id/menu_main"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:background="?attr/colorPrimary" />

                </RelativeLayout>
            </RelativeLayout>


            <android.support.design.widget.NavigationView
                android:id="@+id/bookmarks_panel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                app:headerLayout="@layout/bookmarks_header"
                app:menu="@menu/bookmarks" />

        </android.support.v4.widget.DrawerLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
